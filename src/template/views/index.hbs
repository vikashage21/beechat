    <style>
       body {
            margin: 0 auto;
            max-width: 800px;
            padding: 0 20px;
            background-color: rgb(144, 144, 233);
            font-family: Arial, sans-serif;
        }

        .container {
            border: 2px solid #dedede;
            background-color: #f1f1f1;
            border-radius: 5px;
            padding: 10px;
            margin: 10px 0;
            overflow: hidden;
        }

        .container.darker {
            border-color: #ccc;
            background-color: #ddd;
        }

        .container::after {
            content: "";
            clear: both;
            display: table;
        }

        .container img {
            float: left;
            max-width: 60px;
            width: 100%;
            margin-right: 20px;
            border-radius: 50%;
        }

        .container img.right {
            float: right;
            margin-left: 20px;
            margin-right: 0;
        }

        .time-right,
        .time-left {
            float: right;
            color: #aaa;
        }

        .time-left {
            float: left;
            color: #999;
        }

        #send {
            background-color: black;
            border-radius: 25px;
            color: white;
            padding: 10px;
            border: none;
            margin: 5px;
            cursor: pointer;
        }

        input {
            border: none;
            text-transform: capitalize;
            width: 80%;
            text-align: center;
            outline: none;
            border-bottom: 2px solid black;
            background-color: transparent;
            margin-bottom: 10px;
            display: inline-block;
        }

        input[type="file"] {
            display: none;
        }

        label {
            background-color: #007bff;
            color: white;
            padding: 10px;
            border-radius: 25px;
            cursor: pointer;
            display: inline-block;
        }

        #imageInputLabel {
            margin-left: 10px;
            margin-right: 10px;
        }

        .result {
            margin-top: 20px;
        }

    </style>
</head>

<body>
    {{>nav}}

    <div class="result chat-messages"></div>

    <form id="chatForm">
        <input id="input" type="text" placeholder="Enter your message">
        <input type="file" id="imageInput" onchange="upload(this.files)" />
        <label for="imageInput" id="imageInputLabel">Attach Image</label>
        <button type="submit" id="send">Send</button>
    </form>
    {{>footer}}

</body>
<script>
    // insazling the socket io
    const socket = io()


    const date = new Date().toLocaleTimeString()

    const displayMessage = function (message) {
        const div = document.createElement('div');
        const html = `
        <div class="container ">
  
  <p>${message}</p>
  <span class="time-left">${date}</span>
</div>

        `
        div.innerHTML = html



        result.appendChild(div);


    }


    const replayMsg = function (message) {
        const div = document.createElement('div');
        const html = `
        <div class="container darker">
  
  <p>${message}</p>
  <span class="time-left">${date}</span>
</div>

        `
        div.innerHTML = html



        result.appendChild(div);


    }


    const form = document.querySelector('form');
    const btn = document.querySelector('button');
    const result = document.querySelector('.result');
    const input = document.querySelector('#input');





    form.addEventListener('submit', function (e) {
        e.preventDefault();

        displayMessage(input.value)

        console.log('submit');

        socket.emit('userMessage', input.value);
        input.value = '';


    });



    socket.on('message', function (data) {
        displayMessage(data)
    })

    socket.on('TotalUser', function (data) {
        displayMessage(data.message)
    })

    socket.on('displayMsg', function (data) {
        replayMsg(data)
    })


